{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["prettier"],
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": "latest"
  },
  "rules": {
    "eqeqeq": "error",
    "no-undef": 2,
    "no-unused-vars": [
      2,
      { "argsIgnorePattern": "_", "varsIgnorePattern": "_" }
    ],
    "no-use-before-define": 2,
    "no-sequences": "off",
    "no-var": "off",
    "semi": ["error", "always"],
    "max-len": [
      "warn",
      {
        "code": 100,
        "comments": 80
      }
    ]
  }
}
